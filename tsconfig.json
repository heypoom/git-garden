{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "moduleResolution": "node",
    "skipLibCheck": true,
    "allowJs": true,
    "jsx": "preserve",
    "sourceMap": true,
    "removeComments": false,
    "strict": true,
    "esModuleInterop": true
  }
}
